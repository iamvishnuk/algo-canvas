{
  "extends": "@algocanvas/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@algocanvas/ui/*": ["../../packages/ui/src/*"],
      "@algocanvas/types/*": ["../../packages/types/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "composite": true,
    "incremental": true
  },
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/types" }
  ],
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
